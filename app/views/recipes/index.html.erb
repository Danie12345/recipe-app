<%= stylesheet_link_tag "styles" %>
<h1>Recipes index</h1>
<% @recipes.each do |recipe| %>
  <div class="recipe-card">
    <div class="recipe-title-container">
      <%= link_to recipe_path(recipe.id) do %>
        <h3 class="recipe-title">
          <%= recipe.name %>
        </h3>
      <%end%>
      <%# if can? :delete, @post %>
      <%= button_to 'Remove', user_recipe_path(recipe.user.id, recipe.id), method: :delete %>
      <%# end %>
    </div>
    <p>
      <%= recipe.description %>
    </p>
  </div>
<%end%>